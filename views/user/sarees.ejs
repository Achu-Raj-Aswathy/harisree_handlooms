<%- include('./partials/header') %>
<%- include('./partials/userHeader') %>

<%
// Sample saree data array in EJS (normally passed from controller)
const sareeData = [
  { id: 1, image: "/assets/images/handlooms/sarees1.jpg", price: 1500, name: "Kasavu Saree" },
  { id: 2, image: "/assets/images/handlooms/sarees2.jpg", price: 1800, name: "Kerala Cotton Saree" },
  { id: 3, image: "/assets/images/handlooms/sarees3.jpg", price: 1800, name: "Traditional White Saree" },
  { id: 4, image: "/assets/images/handlooms/sarees4.jpg", price: 1350, name: "Traditional White Saree" },
  { id: 5, image: "/assets/images/handlooms/sarees5.jpg", price: 900, name: "Traditional White Saree" },
  { id: 6, image: "/assets/images/handlooms/sarees6jpg.jpg", price: 1550, name: "Traditional White Saree" },
  // ...add more as needed
];
%>

<section class="sarees-page-container">
  <h2 class="sarees-title">Explore Our Sarees</h2>

  <div class="sarees-grid">
    <% sareeData.forEach((saree) => { %>
      <a href="/product/<%= saree.id %>" class="saree-card" data-aos="fade-up">
        <img src="<%= saree.image %>" alt="<%= saree.name %>" />
        <div class="saree-info">
          <h4 class="saree-name"><%= saree.name %></h4>
          <p class="saree-price">â‚¹<%= saree.price %></p>
        </div>
      </a>
    <% }); %>
  </div>
</section>
<style>
    .sarees-page-container {
  padding: 2rem;
  background: #fffaf6;
  min-height: 100vh;
}

.sarees-title {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 2rem;
  font-family: 'Playfair Display', serif;
  color: #d2691e;
}

.sarees-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.saree-card {
  background: #fff;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 5px 18px rgba(0, 0, 0, 0.1);
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}

.saree-card:hover {
  transform: translateY(-8px);
}

.saree-card img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-top-left-radius: 14px;
  border-top-right-radius: 14px;
}

.saree-info {
  padding: 0.8rem 1rem 1.2rem;
  text-align: center;
}

.saree-name {
  font-size: 1.1rem;
  color: #222;
  margin-bottom: 0.5rem;
}

.saree-price {
  font-size: 1.3rem;
  font-weight: bold;
  color: #e91e63;
  background: #fff0f5;
  display: inline-block;
  padding: 0.3rem 0.8rem;
  border-radius: 8px;
}

</style>

<%- include('./partials/footer') %>
</div>