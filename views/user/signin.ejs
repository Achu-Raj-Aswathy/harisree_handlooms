<body>
  <div class="login-container">
    <div class="login-form-box">
      <div class="logo">
        <a href="/" class="logo logo-dark d-inline-block align-items-center" >
          <img src="assets/images/logo-lightt.png" alt="Site Logo" style="height: 60px; width: 80px; " class="mx-auto" />
        </a>
      </div>

      <h2>Welcome Back!</h2>
      <p>Let’s Login to Your Account</p>

      <form id="signinForm" action="/signin" method="post">
        <!-- Email Input -->
        <div class="input-wrapper">
          <input type="text" id="email" name="email" placeholder="Enter email" />
          <span class="input-error-message" id="emailError"></span>
        </div>

        <!-- Password Input -->
        <div class="input-wrapper password-wrapper">
          <input type="password" id="password" name="password" placeholder="Enter password" />
          <span class="toggle-eye" id="togglePassword"><i class="fa-solid fa-eye"></i></span>
          <span class="input-error-message" id="passwordError"></span>
        </div>

        <button type="submit">LOGIN</button>

        <% if (message) { %>
                                        <div class="alert alert-<%= messageType === 'success' ? 'success' : 'danger' %>" role="alert">
                                          <%= message %>
                                        </div>
                                    <% } %>

        <div style="text-align: right; margin-bottom: 1rem;">
          <a href="/forgot-password" style="color: #fff; text-decoration: underline; font-size: 0.9rem;">Forgot Password?</a>
        </div>
      </form>

      <p class="register-text text-white">
        Don’t have an account? <a href="/signup">Register now</a>
      </p>
    </div>
  </div>



