  font-size: 0.85rem;
  margin-top: 5px;
  display: block;
}

.toggle-eye {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 1.2rem;
}

button {
  width: 100%;
  padding: 10px;
  background-color: #e91e63;
  color: white;
  font-size: 1rem;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover {
  background-color: #d81b60;
}

.register-text a {
  color: #4dd0e1;
  text-decoration: underline;
}
.logo {
  display: flex;
  justify-content: center;
  align-items: center;
