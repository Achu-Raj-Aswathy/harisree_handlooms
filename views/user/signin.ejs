        <div class="input-wrapper">
          <input type="text" id="email" name="email" placeholder="Enter email" class="form-control" autocomplete="off" required/>
          <span class="input-error-message" id="emailError"></span>
        </div>

        <!-- Password Input -->
        <div class="input-wrapper password-wrapper">
          <input type="password" id="password" name="password" placeholder="Enter password"  class="form-control" required/>
          <span class="toggle-eye" id="togglePassword"><i class="fa-solid fa-eye"></i></span>
          <span class="input-error-message" id="passwordError"></span>
        </div>

        <button type="submit">LOGIN</button>

        <% if (message) { %>
          <div class="alert alert-<%= messageType === 'success' ? 'success' : 'danger'  %> mt-3" role="alert">
              <%= message %>
          </div>
        <% } %>

        <div style="text-align: right; margin-bottom: 1rem;">
          <a href="/forgot-password" style="color: #fff; text-decoration: underline; font-size: 0.9rem;">Forgot Password?</a>
        </div>
      </form>

      <p class="register-text text-white">
        Don’t have an account? <a href="/signup">Register now</a>
      </p>
    </div>
  </div>



