<%- include('./partials/header') %>
  <%- include('./partials/userHeader') %>
    <main class="main-wrapper">
      <!-- Start Shop Area  -->
      <div class="axil-single-product-area bg-color-white">
        <div class="single-product-thumb axil-section-gap pb--20 pb_sm--0 bg-vista-white">

          <div class="container">
            <div class="row row--25 align-items-center">
              <!-- ðŸ–¼ï¸ Image Slider - LEFT (Desktop) -->
              <div class="col-lg-5 mb--40">
                <div class="position-sticky sticky-top">
                  <div class="product-image-slider mb-4">

                    <!-- ðŸ–¼ï¸ Image Slider -->
                    <% if (product.images && product.images.length> 0) { %>
                      <% product.images.forEach(image=> { %>
                        <div style="display: flex; justify-content: center; align-items: center;">

                          <img class="img-fluid object-cover" src="<%= image %>" alt="<%= product.name %>"
                            style="border-radius: 10px; height: 400px; width: 300px; " />
                        </div>
                        <% }) %>
                          <% } else { %>
                            <div>
                              <img class="img-fluid w-100" src="/assets/images/placeholder.jpg" alt="No Image Available"
                                style="border-radius: 10px;" />
                            </div>
                            <% } %>

                  </div>
                </div>
              </div>

              <!-- ðŸ“ Product Info - RIGHT (Desktop) -->
              <div class="col-lg-7 mb--40">
                <div class="single-product-content">
                  <div class="inner">
                    <h2 class="product-title">
                      <%= product.name %>
                    </h2>
                    <span class="price-amount"><span style="text-decoration: line-through; color: grey">â‚¹<%=
                          product.price %></span>&nbsp;â‚¹<%= product.discount %></span>
                    <div class="product-rating my-2">


                    </div>

                    <ul class="product-meta mb-3">
                      <li><i class="fal fa-check"></i> In stock</li>
                      <li><i class="fal fa-check"></i> Free delivery available</li>
                      <!-- <li><i class="fal fa-check"></i> Sales 30% Off Use Code: <strong>MOTIVE30</strong></li> -->
                    </ul>

                    <p class="description mb-4">
                      <%= product.description %>
                    </p>

                    <h6>Product Details</h6>
                    <ul class="list-unstyled">
                      <li><span>Length: </span>
                        <%= product.size %>
                      </li>
                      <li><span>Specifications: </span>
                        <%= product.specifications %>
                      </li>

                    </ul>

                    <!-- ðŸŽ¨ Variants -->


                    <!-- ðŸ›’ Actions -->
                    <!-- â­ Stylish Single-Row Action Panel -->
                    <div class="product-action-wrapper mt-4">
                      <div class="d-flex flex-row flex-wrap align-items-center justify-content-start gap-3">

                        <!-- ðŸ“¦ Quantity Selector -->
                        <!-- ðŸ“¦ Quantity Selector -->
                        <div class="d-flex align-items-center border rounded-pill px-3 py-1 bg-light"
                          style="height: 44px;">
                          <button class="btn btn-sm px-2 py-0 border-0 bg-transparent" onclick="adjustQty(-1)">
                            <i class="fas fa-minus"></i>
                          </button>
                          <span id="qty-value" class="mx-3 fw-bold"
                            style="min-width: 20px; text-align: center; font-size: 16px; color: #000;">1</span>
                          <button class="btn btn-sm px-2 py-0 border-0 bg-transparent" onclick="adjustQty(1)">
                            <i class="fas fa-plus"></i>
                          </button>
                        </div>


                        <!-- ðŸ›ï¸ Buy Now -->
                        <a href="/cart" class="btn btn-danger fw-semibold px-4 py-2 rounded-pill"
                          style="height: 44px; display: flex; align-items: center;">
                          Buy Now
                        </a>


                        <!-- â¤ï¸ Wishlist -->
                        <a href="/wishlist"
                          class="add-to-wishlist btn btn-outline-dark rounded-circle d-flex align-items-center justify-content-center"
                          style="width: 44px; height: 44px; data-id=" <%=product._id %>">
                          <i class="fas fa-heart text-danger"></i></a>


                        <!-- ðŸ›’ Add to Cart -->
                        <button data-id="<%= product._id %>"
                          class="add-to-cart btn btn-outline-dark rounded-circle d-flex align-items-center justify-content-center"
                          style="width: 44px; height: 44px;">
                          <i class="fas fa-cart-plus"></i>
                        </button>

                      </div>
                    </div>


                    <!-- ðŸ“¢ Customer Reviews -->
                    <!-- Review Form -->
                    <form id="reviewForm" enctype="multipart/form-data">
                      <!-- Star Rating Component -->
                      <script>
                        function setRating(inputId, rating) {
                          document.getElementById(inputId).value = rating;
                          const stars = document.querySelectorAll(
                            `#${inputId}-stars .star`
                          );
                          stars.forEach((star, index) => {
                            star.classList.toggle("active", index < rating);
                          });
                        }
                      </script>




                      <div class="form-group  mt-5">
                        <div class="d-flex justify-content-between">
                          <div class="rating-container d-flex">
                            <p>Rate Your Product:</p>
                            <div id="overallRating-stars">
                              <span class="star" onclick="setRating('overallRating', 1)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 2)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 3)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 4)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 5)">â˜…</span>
                            </div>
                            <input type="hidden" id="overallRating" name="overallRating" required />
                          </div>

                          <div class="toggle-bar">
                            <a href="javascript:void(0)" class="toggle-btn">
                              Write a Review..?
                            </a>
                          </div>

                        </div>

                        <div class="toggle-open">

                          <div class="form-group mt-4">
                            <p>Your Review</p>
                            <textarea id="review" name="review" class="form-control" rows="4"
                              placeholder="Write your experience..."></textarea>
                          </div>

                          <div class="form-group">
                            <p>Upload Images</p>
                            <input type="file" id="images" name="images" class="form-control" multiple />
                          </div>

                          <ul class="list-inline mt-4">
                            <li class="list-inline-item">
                              <button type="submit" class="btn btn-success" id="submit">
                                Submit
                              </button>
                            </li>
                            <li class="list-inline-item">
                              <button type="reset" class="btn btn-danger" id="cancelBtn">
                                Cancel
                              </button>
                            </li>
                          </ul>
                        </div>
                      </div>
                  



                  </form>

                   <div class="form-group  mt-5">
                        <div class="d-flex justify-content-between">
                          <div class="rating-container d-flex">
                            <p>Overall Rating:</p>
                            <div id="overallRating-stars">
                              <span class="star" onclick="setRating('overallRating', 1)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 2)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 3)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 4)">â˜…</span>
                              <span class="star" onclick="setRating('overallRating', 5)">â˜…</span>
                            </div>
                            <input type="hidden" id="overallRating" name="overallRating" required />
                          </div>

                          <div class="toggle-bar">
                            <a href="javascript:void(0)" class="toggle-btn">
                              View Reviews..!
                            </a>
                          </div>

                        </div>

                        <div class="toggle-open">

                          <div class="form-group mt-4">
                            <p>Your Review</p>
                            <textarea id="review" name="review" class="form-control" rows="4"
                              placeholder="Write your experience..."></textarea>
                          </div>

                          <div class="form-group">
                            <p>Upload Images</p>
                            <input type="file" id="images" name="images" class="form-control" multiple />
                          </div>

                          <ul class="list-inline mt-4">
                            <li class="list-inline-item">
                              <button type="submit" class="btn btn-success" id="submit">
                                Submit
                              </button>
                            </li>
                            <li class="list-inline-item">
                              <button type="reset" class="btn btn-danger" id="cancelBtn">
