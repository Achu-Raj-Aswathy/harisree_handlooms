    <script>
      function adjustQty(change) {
        const qtySpan = document.getElementById("qty-value");
        let currentQty = parseInt(qtySpan.innerText);
        if (!isNaN(currentQty)) {
          const newQty = Math.max(1, currentQty + change);
          qtySpan.innerText = newQty;
        }
      }
    </script>

