    const cartSummary = {
      items: [
        {
          productId,
          name,
          quantity: qty,
          price: price,
          subtotal: subtotal
        }
      ],
      total: subtotal
    };

    const cartDataInput = document.getElementById("productCartDataInput");
    cartDataInput.value = JSON.stringify(cartSummary);

    document.getElementById("buyNowForm").submit();
  }
</script>

