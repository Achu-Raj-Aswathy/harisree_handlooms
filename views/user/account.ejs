  <style>
    .track-step {
      position: relative;
      padding-left: 35px;
      margin-bottom: 25px;
    }
    .track-step::before {
      content: '';
      position: absolute;
      left: 7px;
      top: 4px;
      width: 14px;
      height: 14px;
      border-radius: 50%;
      background: #0d6efd;
    }
    .track-step.completed::before {
      background: green;
    }
    .track-step::after {
      content: '';
      position: absolute;
      left: 13px;
      top: 20px;
      height: calc(100% - 20px);
      width: 2px;
      background: #ccc;
    }
    .track-step:last-child::after {
      content: none;
    }
    @media (max-width: 576px) {
      .track-step {
        padding-left: 25px;
        font-size: 0.95rem;
      }
      .track-step::before {
        width: 12px;
        height: 12px;
        top: 5px;
      }
      .track-step::after {
        left: 10px;
      }
      .card-body {
        padding: 1rem;
      }
    }
  </style>
