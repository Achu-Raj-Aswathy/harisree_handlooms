      background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTjB1Jv7gknwOLpok26SNZmEDjoHaQ-GFyC0Q&s');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      position: relative;
      min-height: 100vh;
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }

    .login-card {
      max-width: 400px;
      width: 100%;
      z-index: 1;
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 8px;
    }
