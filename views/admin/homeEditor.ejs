<%- include('./partials/header') %>
    <div class="wrapper">
        <%- include('./partials/adminHeader') %>
            <%- include('./partials/sidebar') %>

                <!-- ==================================================== -->
                <!-- Start right Content here -->
                <!-- ==================================================== -->
                <div class="page-content">
                    <!-- Start Container Fluid -->
                    <div class="container-xxl">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 ">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Edit Slider Images</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/admin/update-slider" method="POST" enctype="multipart/form-data">
                                            <div class="row g-4">
                                                <% const sliderImages=[ "/assets/images/banner/handloom-hero1.jpg"
                                                    , "/assets/images/banner/handloom-hero2.jpg"
                                                    , "/assets/images/banner/handloom-hero3.jpg"
                                                    , "/assets/images/banner/handloom-hero4.jpg" ]; %>

                                                    <% sliderImages.forEach((img, index)=> { %>
                                                        <div class="col-md-3 text-center">
                                                            <label class="form-label d-block mb-2">Slider <%= index + 1
                                                                    %></label>
                                                            <img id="preview<%= index + 1 %>" src="<%= img %>"
                                                                alt="Slider <%= index + 1 %>"
                                                                class="img-fluid border rounded mb-2" />
                                                            <input type="file" name="sliderImage<%= index + 1 %>"
                                                                class="form-control mb-2 image-input"
                                                                data-preview="preview<%= index + 1 %>"
                                                                accept="image/*" />
                                                            <small class="text-muted">Leave empty to keep
                                                                current</small>
                                                        </div>
                                                        <% }) %>

                                            </div>



                                        </form>
                                    </div>
                                </div>
                                <div class="p-3 bg-light mb-3 rounded">
                                    <div class="row justify-content-end g-2">
                                        <div class="col-lg-2">
                                            <a href="#!" class="btn btn-outline-secondary w-100">Update</a>
                                        </div>
                                        <div class="col-lg-2">
                                            <a href="#!" class="btn btn-primary w-100">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Offer Tagline</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <form>
                                                    <div class="mb-3">
                                                        <input type="text" id="product-name" class="form-control"
                                                            placeholder="Write a catchy tagline for your offer" />
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="p-3 bg-light mb-3 rounded">
                                    <div class="row justify-content-end g-2">
                                        <div class="col-lg-2">
                                            <a href="#!" class="btn btn-outline-secondary w-100">Update</a>
                                        </div>
                                        <div class="col-lg-2">
                                            <a href="#!" class="btn btn-primary w-100">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%- include('./partials/footer') %>
                </div>
    </div>

    <script>
        document.querySelectorAll(".image-input").forEach((input) => {
            input.addEventListener("change", function () {
                const previewId = this.dataset.preview;
                const previewImg = document.getElementById(previewId);

                if (this.files && this.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        previewImg.src = e.target.result;
                    };
                    reader.readAsDataURL(this.files[0]);
                }
            });
        });
    </script>