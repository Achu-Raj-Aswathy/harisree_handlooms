        <% } else { %>
          <p class="text-muted">Image not found</p>
        <% } %>
        <input type="file" name="sliderImage<%= index + 1 %>"
               class="form-control mb-2 image-input"
               data-preview="preview<%= index + 1 %>"
               accept="image/*" />
        <small class="text-muted">Leave empty to keep current</small>
      </div>
    <% }) %>
  <% } else { %>
    <p class="text-muted">No slider data available.</p>
  <% } %>
</div>



