 <%- include('./partials/header') %>
 <!-- START Wrapper -->
 <div class="wrapper">
 <%- include('./partials/adminHeader') %>
<%- include('./partials/sidebar') %>  
  <style>
    .status-badge {
      font-size: 0.8rem;
      padding: 5px 10px;
      border-radius: 20px;
    }

    .table td, .table th {
      vertical-align: middle;
    }

    @media (max-width: 768px) {
      .table-responsive {
        font-size: 0.85rem;
      }
    }
   
  </style>

  <div class="page-content">

               <!-- Start Container Fluid -->
               <div class="container-fluid">
  

    <div class="table-responsive shadow-sm">
      <table class="table table-bordered table-hover bg-white align-middle">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Courier</th>
            <th>Tracking ID</th>
            <th>Status</th>
            <th>Last Updated</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
         <tbody>

  <% orders.forEach((order, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><a href="/admin/order-details?id=<%= order._id %>"><%= order.orderId %></a></td>
      <td><a href="/admin/user-details?id=<%= order.userId._id %>"><strong><%= order.address.name %></strong><br><small><%= order.address.phone %></small></a></td>
      <td>DTDC</td>
      <td><%= order.dtdcTrackingNumber %></td>
      <td>
        <span class="status-badge
          <% if(order.status === 'Shipped') { %> bg-warning
          <% } else if(order.status === 'In Transit') { %> bg-info
          <% } else if(order.status === 'Out for Delivery') { %> bg-primary
          <% } else if(order.status === 'Delivered') { %> bg-success
          <% } else { %> bg-secondary <% } %> text-white">
          <%= order.status %>
        </span>
      </td>
      <td>
  <%= new Date(order.createdAt).toLocaleString('en-GB', {
      day: '2-digit',
      month: 'short',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      hour12: true
  }) %>
</td>

      <td>
        <a href="/admin/order-details?id=<%= order._id %>" class="btn btn-sm btn-outline-primary">
          Track
        </a>
      </td>
    </tr>
  <% }) %>
</tbody>

      </table>
    </div>
    
  </div>
  </div>
  
   <%- include('./partials/footer') %>
  </div>
